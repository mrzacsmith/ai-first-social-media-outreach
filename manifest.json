{
  "manifest_version": 3,
  "name": "Social Media Outreach Assistant",
  "version": "1.0",
  "description": "AI-powered social media response generator with platform-specific features",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://openrouter.ai/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/twitter.png",
        "icons/linkedin.png",
        "icons/instagram.png",
        "icons/facebook.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
